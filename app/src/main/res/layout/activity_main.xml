<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="22dp"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">
    <ImageView
            android:id="@+id/joystick_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/joystick"
            app:layout_constraintBottom_toBottomOf="@id/joystick"
            app:layout_constraintRight_toRightOf="@id/joystick"
            app:layout_constraintLeft_toLeftOf="@id/joystick"
            android:src="@drawable/joystick_background"
    />
    <com.example.myapplication.Joystick
            android:id="@+id/joystick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@id/rudder"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/vertical"
    />
    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
            android:id="@+id/vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/joystick"
            app:layout_constraintBottom_toBottomOf="@id/joystick"
    >
        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                android:id="@+id/throttle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:max="100"
                android:progress="0"
                android:splitTrack="false"
                app:seekBarRotation="CW270" />
    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
    <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/rudder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintRight_toRightOf="@id/joystick"
            app:layout_constraintLeft_toRightOf="@id/vertical"
            app:layout_constraintBottom_toTopOf="@id/connect"
            android:max="200"
            android:min="0"
            android:progress="100"
            android:rotation="0"/>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
    >
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="enter ip:"
        />
        <EditText
                android:id="@+id/ip_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
        />
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/port_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="enter port:"
        />
        <EditText
                android:id="@+id/port_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="text"
        />
        <Button
                android:text="connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/connect_button"
                android:onClick="connect"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>